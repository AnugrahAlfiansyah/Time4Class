<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:padding="16dp"
    tools:context=".MainActivity2">

    <!-- Header with profile and settings icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/fprofile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circleimg"
            android:contentDescription="Profile Picture"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_account_circle_24" />

        <TextView
            android:id="@+id/uname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="8dp"
            android:text="Username"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_build_circle_24"
            android:contentDescription="Settings Icon" />
    </LinearLayout>

    <!-- Date selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_bg"
            android:text="Today"
            android:textColor="#000000" />

        <Button

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="Schedule"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/tambah"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_add_circle_24"
            android:backgroundTint="#2196F3"
            android:contentDescription="Add Icon" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="Your Weekly Schedule "
        android:textSize="40sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000" />

    <!-- Task List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Repeat the above LinearLayout for each task item with different colors and content as needed -->

    </LinearLayout>

